# AWS Deployment Configuration
# Copy this file to .env and configure for your AWS environment

# =============================================================================
# AWS CONFIGURATION
# =============================================================================

# Enable AWS services (set to true for AWS deployment)
USE_AWS=false

# AWS Region
AWS_REGION=us-east-1

# =============================================================================
# AWS BEDROCK (LLM)
# =============================================================================

# Bedrock model ID (choose one):
# - anthropic.claude-3-haiku-20240307-v1:0 (fast, recommended)
# - anthropic.claude-3-5-sonnet-20240620-v1:0 (high quality)
# - amazon.nova-micro-v1:0 (fastest, basic)
# - amazon.nova-lite-v1:0 (fast, better quality)
AWS_BEDROCK_MODEL=anthropic.claude-3-haiku-20240307-v1:0

# Enable streaming for low latency
AWS_BEDROCK_STREAMING=true

# =============================================================================
# AWS POLLY (TTS)
# =============================================================================

# Polly voice ID
# - Kajal (neural, premium quality, Indian English)
# - Aditi (standard, Indian English)
AWS_POLLY_VOICE=Kajal

# Polly engine type
AWS_POLLY_ENGINE=neural

# Language code
AWS_POLLY_LANGUAGE=en-IN

# =============================================================================
# AWS S3 (STORAGE)
# =============================================================================

# S3 bucket for transcripts and recordings
AWS_S3_BUCKET=battery-smart-transcripts

# S3 prefixes for different content types
AWS_S3_TRANSCRIPTS_PREFIX=voice_transcripts/
AWS_S3_RECORDINGS_PREFIX=raw_recordings/

# =============================================================================
# AWS DYNAMODB (DATABASE)
# =============================================================================

# Table name prefix
AWS_DYNAMODB_TABLE_PREFIX=BatterySmart_

# =============================================================================
# AWS SNS (ALERTS)
# =============================================================================

# SNS topic ARN for supervisor alerts
AWS_SNS_TOPIC_ARN=

# =============================================================================
# GROQ CONFIGURATION (PRIMARY LLM - REQUIRED)
# =============================================================================

# Groq API key (get free key from https://console.groq.com/keys)
GROQ_API_KEY=your-groq-api-key-here

# =============================================================================
# FALLBACK CONFIGURATION (for local development)
# =============================================================================

# Gemini API key (DEPRECATED - use GROQ instead)
# GEMINI_API_KEY=your-gemini-api-key-here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Flask secret key
FLASK_SECRET_KEY=battery-smart-unified-secret-2024

# Server port
PORT=5000

# Debug mode (set to false in production)
DEBUG=true
